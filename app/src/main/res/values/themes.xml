<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Sicredi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/black</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/black</item>
    </style>

    <style name="titleBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="subtitleNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="color">@color/black</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="subtitleBold" parent="subtitleNormal">
        <item name="android:textStyle">bold</item>
    </style>

</resources>